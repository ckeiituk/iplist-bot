# Telegram Bot Token (from @BotFather)
TG_TOKEN=your_telegram_bot_token

# GitHub Personal Access Token (needs 'repo' scope)
GITHUB_TOKEN=your_github_token

# Google Gemini API Key (free at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key

# Optional: Telegram channel ID for logging
# Format: -1001234567890 (channel) or -1001234567890:14 (topic in forum)
LOG_CHANNEL_ID=

# Optional: GitHub webhook secret (generate random string)
WEBHOOK_SECRET=

# Collector site API (for LK data)
SITE_API_BASE_URL=https://collector.example.com
SITE_API_KEY=your_api_key

# Telegram Web App URL (Mini App entry)
SITE_WEBAPP_URL=https://collector.example.com/my/tg

# Optional: LK payment request channel (format: -1001234567890 or -1001234567890:42)
LK_ADMIN_CHANNEL_ID=
